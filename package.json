{
  "name": "werforge",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@9.15.3",
  "description": "Dev kit for me.",
  "author": "Werheng <werheng.zhang@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/werheng/werforge#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/werheng/werforge"
  },
  "bugs": "https://github.com/werheng/werforge/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "werforge": "./bin/cli.mjs"
  },
  "files": [
    ".config",
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch src",
    "build": "tsup",
    "play": "cd playground && pnpm run dev",
    "play:build": "cd playground && pnpm run build",
    "play:preview": "cd playground && pnpm run preview",
    "test": "vitest",
    "test:run": "vitest run",
    "commit": "node ./bin/cli.mjs commit",
    "release": "bumpp -r",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deps": "pnpx taze -r",
    "deps:up": "pnpx taze -wr"
  },
  "dependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "citty": "^0.1.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "inquirer": "9.3.7",
    "lint-staged": "^15.3.0",
    "pkg-types": "^1.3.0",
    "simple-git-hooks": "^2.11.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.13.0",
    "@types/node": "^22.10.5",
    "bumpp": "^9.10.0",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "node ./bin/cli.mjs lint-staged",
    "commit-msg": "node ./bin/cli.mjs commitlint"
  }
}
